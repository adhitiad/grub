{
  "version": 2,
  "name": "grub-api",
  "builds": [
    {
      "src": "dist/app.js",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "/dist/app.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/dist/app.js"
    },
    {
      "src": "/",
      "dest": "/dist/app.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "regions": ["sin1"],
  "installCommand": "npm ci",
  "buildCommand": "npm run build"
}
