# =============================================================================
# GRUB API - Environment Variables Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# For Vercel deployment, add these variables in your Vercel project settings

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=8520
NODE_ENV=production

# =============================================================================
# API CONFIGURATION
# =============================================================================
# Your Vercel deployment URL (update after deployment)
API_BASE_URL=https://your-project-name.vercel.app
FRONTEND_URL=https://your-frontend-domain.com

# =============================================================================
# FIREBASE CONFIGURATION (REQUIRED)
# =============================================================================
# Get these from Firebase Console > Project Settings > Service Accounts
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
# For Vercel: Replace \n with actual newlines in the private key
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"

# =============================================================================
# JWT CONFIGURATION (REQUIRED)
# =============================================================================
# Generate a secure random string (at least 32 characters, recommended 64+)
# You can use: openssl rand -base64 64
JWT_SECRET=your-super-secure-jwt-secret-key-at-least-32-characters-long
JWT_EXPIRES_IN=1d

# =============================================================================
# FLIP PAYMENT GATEWAY (OPTIONAL)
# =============================================================================
# Get these from your Flip dashboard
FLIP_SECRET_KEY=your-flip-secret-key
FLIP_VALIDATION_TOKEN=your-flip-validation-token

# =============================================================================
# RATE LIMITING CONFIGURATION
# =============================================================================
# Standard rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Device-based rate limiting
DEVICE_RATE_LIMIT_ENABLED=true
DEVICE_RATE_LIMIT_REQUIRE_DEVICE_ID=false
DEVICE_RATE_LIMIT_FALLBACK_TO_IP=true
DEVICE_RATE_LIMIT_WINDOW_MS=900000
DEVICE_RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# EMAIL CONFIGURATION (OPTIONAL)
# =============================================================================
# SMTP settings for sending emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Grub Distributor

# =============================================================================
# VERCEL DEPLOYMENT NOTES
# =============================================================================
# 1. Add all REQUIRED variables to your Vercel project environment variables
# 2. For FIREBASE_PRIVATE_KEY: In Vercel, paste the key with actual newlines
# 3. Set NODE_ENV=production in Vercel
# 4. Update API_BASE_URL with your actual Vercel deployment URL
# 5. Ensure FRONTEND_URL points to your frontend domain
